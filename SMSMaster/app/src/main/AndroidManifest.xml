<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ironfactory.smsmasterapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.activities.SelectGroupActivity" />
        <activity
            android:name=".controllers.activities.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.activities.MainActivity" />
        <activity android:name=".controllers.activities.MasterActivity" />
        <activity android:name=".controllers.activities.MsgActivity" />
        <activity android:name=".controllers.activities.InputActivity" />
        <activity android:name=".controllers.activities.SuperMasterActivity" />
        <activity android:name=".controllers.activities.SetGroupActivity" />
        <activity android:name=".controllers.activities.SetMemberActivity" />
        <activity android:name=".controllers.activities.SettingActivity"></activity>
    </application>

</manifest>
