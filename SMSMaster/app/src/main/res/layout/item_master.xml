<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin_small"
    android:paddingBottom="@dimen/margin_small">

    <LinearLayout
        android:id="@+id/item_master_parent_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_master_parent_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:singleLine="true"
            android:textSize="@dimen/font_normal"
            android:gravity="center"/>


        <TextView
            android:id="@+id/item_master_parent_coin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/font_normal"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_normal"/>


        <TextView
            android:id="@+id/item_master_parent_is_connected"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/font_normal"
            android:gravity="center"/>

    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/item_master_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="상호"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_normal"/>

                <TextView
                    android:id="@+id/item_master_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_normal"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="매장번호"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_normal"/>

                <TextView
                    android:id="@+id/item_master_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_normal"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="계정"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_normal"/>

                <TextView
                    android:id="@+id/item_master_account"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="상호"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_normal"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="비밀번호"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_normal"/>

                <TextView
                    android:id="@+id/item_master_password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_normal"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="코인"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_normal"/>

                <TextView
                    android:id="@+id/item_master_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="상호"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_normal"/>

                <Button
                    android:id="@+id/item_master_charge_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="충전"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="그룹"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_normal"/>

                <TextView
                    android:id="@+id/item_master_group"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_normal"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="문구수정허용"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_normal"/>

            <ToggleButton
                android:id="@+id/item_master_allow_change_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textOn="ON"
                android:textOff="OFF"
                android:layout_marginRight="@dimen/margin_normal"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="광고상세조회허용"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_normal"/>

            <ToggleButton
                android:id="@+id/item_master_allow_show_ad_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textOn="ON"
                android:textOff="OFF"
                android:layout_marginRight="@dimen/margin_normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="스마트폰수신번호발신기능"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_normal"/>

            <ToggleButton
                android:id="@+id/item_master_allow_send_to_receive_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textOn="ON"
                android:textOff="OFF"
                android:layout_marginRight="@dimen/margin_normal"/>

            <Button
                android:id="@+id/item_master_change_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="문자내용수정"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_master_infinite_coin_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="코인무제한기능"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_normal"/>

            <ToggleButton
                android:id="@+id/item_master_allow_infinite_coin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textOn="ON"
                android:textOff="OFF"
                android:layout_marginRight="@dimen/margin_normal"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>